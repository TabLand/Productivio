<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_height="wrap_content" 
    android:layout_width="fill_parent" 
    android:orientation="vertical" 
    android:layout_marginBottom="3dp">

    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/heading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#c75c34"
        android:text="Climb Mount Everest"
        android:textColor="#ffffff"
        android:textSize="16sp" android:paddingLeft="10dp" android:paddingRight="10dp"/>

    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#c75c34"
        android:text="hello"
        android:textColor="#ffffff"
        android:textSize="16dp" android:textStyle="italic" android:gravity="right" android:paddingRight="10dp" android:paddingLeft="10dp"/>

</LinearLayout>